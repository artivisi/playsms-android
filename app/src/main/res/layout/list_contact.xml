<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_weight="1">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical" android:descendantFocusability="blocksDescendants"
                  android:layout_height="match_parent" android:layout_width="match_parent" android:layout_weight="9">
            <TextView
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:textStyle="bold"
                android:id="@+id/txt_contact_name"
                android:layout_weight="1"
                android:text="some user" android:layout_gravity="right" android:layout_width="fill_parent"
                    android:layout_height="match_parent" android:layout_marginLeft="5dp" android:gravity="bottom"/>






        <TextView

                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/txt_contact_phone"
                android:layout_weight="1"
                android:descendantFocusability="blocksDescendants"
                android:text="+1-555-1343"
                android:padding="2dp"
                android:textColor="#7F7F7F"
                android:textSize="12sp"
                android:layout_marginLeft="5dp" android:gravity="top"/>

    </LinearLayout>
    <CheckBox
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:id="@+id/selectedcheckbox" android:checked="false"
            android:text="" android:gravity="center"/>


</LinearLayout>
